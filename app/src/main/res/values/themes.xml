<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GainsBookXML" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GainsBookXML.FragmentContainer">
        <item name="defaultNavHost">true</item>
        <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
    </style>

    <style name="Theme.GainsBookXML.BottomNavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="menu">@menu/bottom_navigation_menu</item>
    </style>
</resources>